<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layout_background"
    tools:context=".HigherOrLowerFragment" >

    <TextView
        android:id="@+id/textview_score"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@color/score_background"
        android:gravity="center"
        android:layout_gravity="top|right"
        android:textColor="@color/score_score_colour"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageview_current_card"
        android:layout_width="135dp"
        android:layout_height="195dp"
        android:layout_gravity="center"
        android:contentDescription="@string/current_card_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        style="@style/higher_or_lower_buttons_background"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <Button
            android:id="@+id/button_higher"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/button_higher"
            android:text="@string/button_higher" />

        <Button
            android:id="@+id/button_same"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/button_same"
            android:text="@string/button_same" />

        <Button
            android:id="@+id/button_lower"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/button_lower"
            android:text="@string/button_lower" />
    </LinearLayout>

</FrameLayout>