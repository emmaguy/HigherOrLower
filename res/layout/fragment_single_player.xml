<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layout_background"
    tools:context=".SinglePlayerFragment" >

        <TextView
        android:id="@+id/textview_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="11dp"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="30sp" />
    
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher"
        android:layout_toLeftOf="@id/textview_title2" />
    
    <Button
        android:id="@+id/button_sudden_death"
        style="@style/menu_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/button_sudden_death" />
    
    <Button
        android:id="@+id/button_highscore_mode"
        style="@style/menu_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_sudden_death"
        android:text="@string/button_highscore_mode"/>
    
     <Button
        android:id="@+id/button_back_to_splash_screen"
        style="@style/menu_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:layout_below="@id/button_sudden_death"/>
    
</RelativeLayout>